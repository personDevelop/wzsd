@using MVCExtention;
@{
    ViewBag.Title = "会员等级";
}

<!--工具栏-->
<div id="floatHead" class="toolbar-wrap">
    <div class="toolbar">
        <div class="box-wrap">
            <a class="menu-btn"></a>
            <div class="l-list">
                <ul class="icon-list">
                    <li><a class="add" href="@Url.Action("Edit")"><i></i><span>新增</span></a></li>
                    <li><a class="add" href="javascript:;" onclick="EditGrid('jqxgrid', '@Url.Action("Edit")');"><i></i><span>编辑</span></a></li>
                    <li><a class="del" href="javascript:;" onclick="DelGrid('jqxgrid', '@Url.Action("Delete")');"><i></i><span>删除</span></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--/工具栏-->
<!--列表-->
<div class="table-container">
    <div id="jqxgrid"></div>
</div>
<!--/列表-->
@section  scripts{
    @Html.Partial("_Paging")

    <script type="text/javascript">
        $(document).ready(function () {
            var url = "@Url.Action("GetList")";
            var datafields = [{ name: 'ID' }, { name: 'Code' }, { name: 'Name' }, { name: 'Img' },

		{ name: 'MinVal' }, { name: 'MaxVal' }, { name: 'IsEnable' },

		{ name: 'Note' }];
            var columns = [
   { text: '等级', dataField: 'Code', width: 200 },

  { text: '等级名称', dataField: 'Name', width: 200 },

  { text: '等级值下限(包括)', dataField: 'MinVal', cellsalign: "right", width: 200 },

  { text: '等级值上限(不包括)', dataField: 'MaxVal', cellsalign: "right", width: 200 },

  { text: '可用', dataField: 'IsEnable', width: 200 },

  { text: '等级描述', dataField: 'Note', cellsalign: "left", width: 200 }];
            CreateGrid("jqxgrid", url, datafields, columns);
             
        });
    </script>


}
