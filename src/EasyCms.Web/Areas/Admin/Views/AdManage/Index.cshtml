@using MVCExtention;
@using EasyCms.Model
@{
    ViewBag.Title = "PC端广告管理";
}

<!--工具栏-->
<div id="floatHead" class="toolbar-wrap">
    <div class="toolbar">
        <div class="box-wrap">
            <a class="menu-btn"></a>
            <div class="l-list">
                <ul class="icon-list">
                    <li><a class="add" href="@Url.Action("Edit")"><i></i><span>新增</span></a></li>
                    <li><a class="edit" href="javascript:;" onclick="EditGrid('jqxgrid', '@Url.Action("Edit")');"><i></i><span>修改</span></a></li>
                    <li><a class="del" href="javascript:;" onclick="DelGrid('jqxgrid', '@Url.Action("Delete")');"><i></i><span>删除</span></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--/工具栏-->
<!--列表-->
<div class="table-container">
    <div id="jqxgrid"></div>
</div>
<!--/列表-->
@section  scripts{


    <script type="text/javascript">
        $(document).ready(function () {
            var url = "@Url.Action("GetList")";
            var datafields = [

{ name: 'ID' },
{ name: 'PositionName' },
{ name: 'Code' },
{ name: 'Name' },
{ name: 'AdType' },
{ name: 'AdContent' },
{ name: 'AdLinkType' },
{ name: 'LinkVal' },
{ name: 'LinkUrl' },
{ name: 'OrderNo' },
{ name: 'Note' }
            ];
            var columns = [



   { text: '位置', dataField: 'PositionName', cellsalign: "left", width: 200 },

  { text: '编号', dataField: 'Code', width: 80 },

  { text: '名称', dataField: 'Name', cellsalign: "left", width: 200 },

  { text: '广告类型', dataField: 'AdType', width: 80,@HelperExtend.ParseEnum(typeof(AdType)) },

  { text: '链接类型', dataField: 'AdLinkType', width: 80,@HelperExtend.ParseEnum(typeof(AdLinkType)) },
  { text: '顺序', dataField: 'OrderNo', width: 50 },
  { text: '备注', dataField: 'Note', cellsalign: "left" }

            ];

            CreateGrid("jqxgrid", url, datafields, columns, { isMutilSelect: true });

        });
    </script>


}
