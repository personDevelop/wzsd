@using MVCExtention;
@{
    ViewBag.Title = "级联删除检测";
}

<!--工具栏-->
<div id="floatHead" class="toolbar-wrap">
    <div class="toolbar">
        <div class="box-wrap">
            <a class="menu-btn"></a>
            <div class="l-list">
                <ul class="icon-list">
                    <li><a class="add" href="@Url.Action("Edit")"><i></i><span>新增</span></a></li>
                    <li><a class="edit" href="javascript:;" onclick="EditGrid('jqxgrid', '@Url.Action("Edit")');"><i></i><span>修改</span></a></li>
                    <li><a class="del" href="javascript:;" onclick="DelGrid('jqxgrid', '@Url.Action("Delete")');"><i></i><span>删除</span></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--/工具栏-->
<!--列表-->
<div class="table-container">
    <div id="jqxgrid"></div>
</div>
<!--/列表-->
@section  scripts{
     
    <script type="text/javascript">
        $(document).ready(function () {
            var url = "@Url.Action("GetList")";
            var datafields = [

   { name: 'ID' },
  { name: 'CheckTableName' },
   
  { name: 'ErrorMsg' },
  { name: 'IsCascadeDelete' },
  { name: 'CascadeTableName' },
  { name: 'CascadeTableKey' },
  { name: 'CascadeTableRefKey' },
  
  { name: 'IsCascadeUpdate' },
  { name: 'UpdateMsg' },
  
  { name: 'IsEnable' },
  { name: 'Note' }

        ];
        var columns = [
{ text: '检测表名', dataField: 'CheckTableName', cellsalign: "left", width: 150 },
{ text: '提示信息', dataField: 'ErrorMsg', cellsalign: "left", width: 200 },
{ text: '级联删除', dataField: 'IsCascadeDelete', width:100,@HelperExtend.Parsebool() },
{ text: '级联表', dataField: 'CascadeTableName', cellsalign: "left", width: 150 },
{ text: '主键字段', dataField: 'CascadeTableKey', cellsalign: "left", width:100 },
{ text: '外键字段', dataField: 'CascadeTableRefKey', cellsalign: "left", width: 100 },
{ text: '级联更新', dataField: 'IsCascadeUpdate', width: 100,@HelperExtend.Parsebool() },
{ text: '提示信息提示信息', dataField: 'UpdateMsg', cellsalign: "left" },
        { text: '启用', dataField: 'IsEnable', width: 80,@HelperExtend.ParseEnable() } 
        ];
        CreateGrid("jqxgrid", url, datafields, columns);


        });
    </script>
}
