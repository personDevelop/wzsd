@using MVCExtention;
@{
    ViewBag.Title = "优惠券发放";
}

<!--工具栏-->
<div id="floatHead" class="toolbar-wrap">
    <div class="toolbar">
        <div class="box-wrap">
            <a class="menu-btn"></a>
            <div class="l-list">
                <ul class="icon-list">
                    <li><a class="add" href="@Url.Action("Edit")"><i></i><span>新增</span></a></li>
                    <li><a class="edit" href="javascript:;" onclick="EditGrid('jqxgrid', '@Url.Action("Edit")');"><i></i><span>修改</span></a></li>
                    <li><a class="del" href="javascript:;" onclick="DelGrid('jqxgrid', '@Url.Action("Delete")');"><i></i><span>删除</span></a></li>
                    <li><a class="publish" href="javascript:;" onclick="DelGrid('jqxgrid', '@Url.Action("Send")');"><i></i><span>发放</span></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--/工具栏-->
<!--列表-->
<div class="table-container">
    <div id="jqxgrid"></div>
</div>
<!--/列表-->
@section  scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            var url = "@Url.Action("GetList")";
            var datafields = [

  { name: 'ID'},
  { name: 'CouponName'},
  { name: 'SendTime'},
  { name: 'SendCount'},
  { name: 'SendUserID'},
  { name: 'SendUserName'},
  { name: 'SendType'},
  { name: 'AccountOrder'},
  { name: 'StartRegistTime'},
  { name: 'EndRegistTime'},
  { name: 'MaxBuyCount'},
  { name: 'MinBuyCount'},
  { name: 'IsNotContendSended'},
  { name: 'CreateTime'} 
 ];
            var columns = [

  
  { text: '优惠券', dataField: 'CouponName', cellsalign: "left", width: 200 },

  { text: '发放时间', dataField: 'SendTime', cellsalign: "left", width: 200 },

  { text: '发放个数', dataField: 'SendCount', cellsalign: "left", width: 200 }, 

  { text: '发放人', dataField: 'SendUserName', cellsalign: "left", width: 200 },

  { text: '发放类型', dataField: 'SendType',@HelperExtend.ParseEnum(typeof(EasyCms.Model.SendCouponType))},  

  { text: '创建日期', dataField: 'CreateTime', cellsalign: "left", width: 200 } 

 ];
   CreateGrid("jqxgrid", url, datafields, columns);


        });
    </script>
}
