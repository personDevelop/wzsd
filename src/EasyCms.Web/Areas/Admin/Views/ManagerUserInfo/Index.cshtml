@using MVCExtention;
@{
    ViewBag.Title = "管理员用户表";
}

<!--工具栏-->
<div id="floatHead" class="toolbar-wrap">
    <div class="toolbar">
        <div class="box-wrap">
            <a class="menu-btn"></a>
            <div class="l-list">
                <ul class="icon-list">
                    <li><a class="add" href="@Url.Action("Edit")"><i></i><span>新增</span></a></li>
                    <li><a class="add" href="javascript:;" onclick="Edit();"><i></i><span>编辑</span></a></li>
                    <li><a class="del" href="javascript:;" onclick="Del( );"><i></i><span>删除</span></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--/工具栏-->
<!--列表-->
<div class="table-container">
    <div id="jqxgrid"></div>
</div>
<!--/列表-->
@section  scripts{
    @Html.Partial("_Paging")

    <script type="text/javascript">
        $(document).ready(function () {
            var url = "@Url.Action("GetList")";
            // prepare the data
            var source =
            {
                datatype: "json",
                cache: false,
                datafields: [
		{ name: 'Code', type: 'string' },
		{ name: 'Name', type: 'string' },
		{ name: 'NickyName', type: 'string' },
		{ name: 'Birthday', type: 'string' },
		{ name: 'Sex', type: 'string' },
		{ name: 'ContactPhone', type: 'string' },
		{ name: 'IsManager', type: 'string' },
		{ name: 'CreateDate', type: 'string' },
		{ name: 'LastModifyDate', type: 'string' },
		{ name: 'StatusChangeDate', type: 'string' },
		{ name: 'Status', type: 'string' },
		{ name: 'Note', type: 'string' }

                ],
                beforeprocessing: function (data) {
                    source.totalrecords = data.total;
                },
                root: 'Rows',
                id: 'id',
                url: url,
            };
            var dataAdapter = new $.jqx.dataAdapter(source);

            $("#jqxgrid").jqxGrid(
            {
                width: "95%",
                autoheight: true,
                source: dataAdapter,
                columnsresize: true,
                virtualmode: true,
                rendergridrows: function (params) {
                    return params.data;
                },
                pagerrenderer: pagerrenderer,
                pageSize: 20,
                pageable: true,
                columns: [


  { text: '编号', dataField: 'Code', align: "center", cellsalign: "center", type: 'string', width: 200 },

  { text: '姓名', dataField: 'Name', align: "center", cellsalign: "center", type: 'string', width: 200 },

  { text: '昵称', dataField: 'NickyName', align: "center", cellsalign: "center", type: 'string', width: 200 },

  { text: '生日', dataField: 'Birthday', align: "center", cellsalign: "center", type: 'string', width: 200 },

  { text: '性别', dataField: 'Sex', align: "center", cellsalign: "center", type: 'string', width: 200 },

  { text: '联系手机', dataField: 'ContactPhone', align: "center", cellsalign: "center", type: 'string', width: 200 },

  { text: '是否是后台管理员', dataField: 'IsManager', align: "center", cellsalign: "center", type: 'string', width: 200 },

  { text: '创建日期', dataField: 'CreateDate', align: "center", cellsalign: "center", type: 'string', width: 200 },

  { text: '最后修改日期', dataField: 'LastModifyDate', align: "center", cellsalign: "center", type: 'string', width: 200 },

  { text: '状态变更日期', dataField: 'StatusChangeDate', align: "center", cellsalign: "center", type: 'string', width: 200 },

  { text: '状态', dataField: 'Status', align: "center", cellsalign: "center", type: 'string', width: 200 },

  { text: '备注', dataField: 'Note', align: "center", cellsalign: "center", type: 'string', width: 200 }

                ]
            });


        });
    </script>
    <script type="text/javascript">
        function Edit() {
            var rowindex = $('#jqxgrid').jqxGrid('getselectedrowindex');
            if (rowindex == -1) {
                ErrorMsg("请选择一条数据");
            } else {
                var data = $('#jqxgrid').jqxGrid('getrowdata', rowindex);

                if (data) {

                    href = "@Url.Action("Edit", new  { area="admin" })";
                    location.href = href + "/" + data.ID;
                } else { ErrorMsg("请选择一条数据"); }
            }


        }

        function Del() {
            var rowindexes = $('#jqxgrid').jqxGrid('getselectedrowindexes');


            if (rowindexes.length == 1) {
                var data = $('#jqxgrid').jqxGrid('getrowdata', rowindexes[0]);
                href = "@Url.Action("Delete", new { area = "admin" })";
                $.post(href, { ID: data.ID }, function (d) {
                    ErrorMsg(d);
                    if (d.indexOf("成功") > -1) {
                        $("#jqxgrid").jqxGrid('deleteRow', rowindexes[0]);
                    }
                });
            } else { ErrorMsg("请选择一条数据"); }
        }
    </script>

}
