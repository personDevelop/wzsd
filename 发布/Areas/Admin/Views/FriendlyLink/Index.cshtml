@using MVCExtention;
@{
    ViewBag.Title = "友情链接";
}

<!--工具栏-->
<div id="floatHead" class="toolbar-wrap">
    <div class="toolbar">
        <div class="box-wrap">
            <a class="menu-btn"></a>
            <div class="l-list">
                <ul class="icon-list">
                    <li><a class="add" href="@Url.Action("Edit")"><i></i><span>新增</span></a></li>
                    <li><a class="edit" href="javascript:;" onclick="EditGrid('jqxgrid', '@Url.Action("Edit")');"><i></i><span>修改</span></a></li>
                    <li><a class="del" href="javascript:;" onclick="DelGrid('jqxgrid', '@Url.Action("Delete")');"><i></i><span>删除</span></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--/工具栏-->
<!--列表-->
<div class="table-container">
    <div id="jqxgrid"></div>
</div>
<!--/列表-->
@section  scripts{


    <script type="text/javascript">
        $(document).ready(function () {
           var url = "@Url.Action("GetList")";
                var datafields = [

  { name: 'ID'},
  { name: 'Name'},
  { name: 'LinkAlt'},
  { name: 'LinkUrl'},
  { name: 'LogoUrl'},
  { name: 'OrderNo' },
  { name: 'GroupTagName'},

 ];
            var columns = [

  

  { text: '链接名称', dataField: 'Name', cellsalign: "left"  },

  { text: '链接提示', dataField: 'LinkAlt', cellsalign: "left" },

  { text: '链接地址', dataField: 'LinkUrl', cellsalign: "left" }, 

  { text: '排序', dataField: 'OrderNo', cellsalign: "left" },

  { text: '分组标识', dataField: 'GroupTagName', cellsalign: "left" },

 ];

            CreateGrid("jqxgrid", url, datafields, columns, {isMutilSelect:true});

        });
    </script>


}
