@using MVCExtention;
@{
    ViewBag.Title = "帮助分类";
}


<!--工具栏-->
<div id="floatHead" class="toolbar-wrap">
    <div class="toolbar">
        <div class="box-wrap">
            <a class="menu-btn"></a>
            <div class="l-list">
                <ul class="icon-list">
                    <li><a class="add" href="@Url.Action("Edit")"><i></i><span>新增</span></a></li>
                    <li><a class="add" href="javascript:;" onclick="EditTree('treeGrid', '@Url.Action("Edit")');"><i></i><span>编辑</span></a></li>
                    <li><a class="del" href="javascript:;" onclick="DelTree('treeGrid', '@Url.Action("Delete")');"><i></i><span>删除</span></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--/工具栏-->
<!--列表-->
<div class="table-container">
    <div id="jqxgrid">
    </div>
</div>
<!--/列表-->
@section  scripts{

    <script type="text/javascript">
    $(document).ready(function () {
        var url = "@Url.Action("GetList")";
        var datafields = [{ name: 'ID' },  { name: 'Code' }, { name: 'Name' }, 
 
     { name: 'Note' } ];
        var columns = [
{ text: '编号', dataField: 'Code',   cellsalign: "left" },
         { text: '名称', dataField: 'Name',  cellsalign: "left" }, 
         { text: '备注', dataField: 'Note', cellsalign: "left" }];
        CreateGrid("jqxgrid", url, datafields, columns, { grid: { pageable: false } });

    });
    </script>
}