@using MVCExtention;
@{
    ViewBag.Title = "品牌信息";
}

<!--工具栏-->
<div id="floatHead" class="toolbar-wrap">
    <div class="toolbar">
        <div class="box-wrap">
            <a class="menu-btn"></a>
            <div class="l-list">
                <ul class="icon-list">
                    <li><a class="add" href="@Url.Action("Edit")"><i></i><span>新增</span></a></li>
                    <li><a class="add" href="javascript:;" onclick="EditGrid('jqxgrid', '@Url.Action("Edit")');"><i></i><span>编辑</span></a></li>
                    <li><a class="del" href="javascript:;" onclick="DelGrid('jqxgrid', '@Url.Action("Delete")');"><i></i><span>删除</span></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--/工具栏-->
<!--列表-->
<div class="table-container">
    <div id="jqxgrid"></div>
</div>
<!--/列表-->
@section  scripts{
     

    <script type="text/javascript">
        $(document).ready(function () {
           var url = "@Url.Action("GetList")";
            var datafields = [{ name: 'ID' }, { name: 'Code' }, { name: 'Name' },
		{ name: 'Logo' }, { name: 'OrderNo' }];
            var columns = [
{ text: '品牌名称', dataField: 'Name', cellsalign: "left", width: 150 },
  { text: '检索拼音', dataField: 'Code', width: 100 },
  { text: '页面描述', dataField: 'Meta_Description', cellsalign: "left", },

  { text: '显示顺序', dataField: 'OrderNo', cellsalign: "right", width: 80 }];
            CreateGrid("jqxgrid", url, datafields, columns);
           
        });
    </script>
    

}
