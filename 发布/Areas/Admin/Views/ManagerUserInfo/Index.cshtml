@using MVCExtention;
@{
    ViewBag.Title = "管理员用户表";
}

<!--工具栏-->
<div id="floatHead" class="toolbar-wrap">
    <div class="toolbar">
        <div class="box-wrap">
            <a class="menu-btn"></a>
            <div class="l-list">
                <ul class="icon-list">
                    <li><a class="add" href="@Url.Action("Edit")"><i></i><span>新增</span></a></li>
                    <li><a class="add" href="javascript:;" onclick="EditGrid('jqxgrid', '@Url.Action("Edit")');"><i></i><span>编辑</span></a></li>
                    <li><a class="del" href="javascript:;" onclick="DelGrid('jqxgrid', '@Url.Action("Delete")');"><i></i><span>删除</span></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--/工具栏-->
<!--列表-->
<div class="table-container">
    <div id="jqxgrid"></div>
</div>
<!--/列表-->
@section  scripts{
     

    <script type="text/javascript">
        $(document).ready(function () {
           var url = "@Url.Action("GetList")";
            var datafields = [{ name: 'ID' }, { name: 'Code' }, { name: 'Name' }, { name: 'NickyName' }, { name: 'Birthday' }, { name: 'Sex' },
		{ name: 'ContactPhone' }, { name: 'IsManager' }, { name: 'CreateDate' }, { name: 'LastModifyDate' },
		{ name: 'StatusChangeDate' }, { name: 'Status' }, { name: 'Note' }];
            var columns = [
    { text: '编号', dataField: 'Code', cellsalign: "left", width: 200 },

  { text: '姓名', dataField: 'Name', cellsalign: "left", width: 200 },

  { text: '昵称', dataField: 'NickyName', cellsalign: "left", width: 200 },

  { text: '生日', dataField: 'Birthday', width: 200 },

  { text: '性别', dataField: 'Sex', width: 200 },

  { text: '联系手机', dataField: 'ContactPhone', width: 200 },

  { text: '是否是后台管理员', dataField: 'IsManager', width: 200 },

  { text: '创建日期', dataField: 'CreateDate', width: 200 },

  { text: '最后修改日期', dataField: 'LastModifyDate', width: 200 },

  { text: '状态变更日期', dataField: 'StatusChangeDate', width: 200 },

  { text: '状态', dataField: 'Status', width: 200 },

  { text: '备注', dataField: 'Note', cellsalign: "left", width: 200 }];
            CreateGrid("jqxgrid", url, datafields, columns);
             

        });
    </script>
   

}
