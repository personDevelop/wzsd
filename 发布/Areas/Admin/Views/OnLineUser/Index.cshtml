@using MVCExtention;
@{
    ViewBag.Title = "在线客服";
}

<!--工具栏-->
<div id="floatHead" class="toolbar-wrap">
    <div class="toolbar">
        <div class="box-wrap">
            <a class="menu-btn"></a>
            <div class="l-list">
                <ul class="icon-list">
                    <li><a class="add" href="@Url.Action("Edit")"><i></i><span>新增</span></a></li>
                    <li><a class="edit" href="javascript:;" onclick="EditGrid('jqxgrid', '@Url.Action("Edit")');"><i></i><span>修改</span></a></li>
                    <li><a class="del" href="javascript:;" onclick="DelGrid('jqxgrid', '@Url.Action("Delete")');"><i></i><span>删除</span></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--/工具栏-->
<!--列表-->
<div class="table-container">
    <div id="jqxgrid"></div>
</div>
<!--/列表-->
@section  scripts{


    <script type="text/javascript">
        $(document).ready(function () {
                 var url = "@Url.Action("GetList")";
            var datafields = [

  { name: 'ID'},
  { name: 'KfType'},
  { name: 'Name'},
  { name: 'KfQQ'},
  { name: 'KFNumber'},

 ];
            var columns = [

  

  { text: '客服类型', dataField: 'KfType', cellsalign: "left", width:80 },

  { text: '客服名称', dataField: 'Name', cellsalign: "left", width: 80 },

  { text: '客服qq号', dataField: 'KfQQ', cellsalign: "left", width:80 },

  { text: '客服其他工作号', dataField: 'KFNumber', cellsalign: "left" } 

 ];
   CreateGrid("jqxgrid", url, datafields, columns);
        });
    </script>


}
