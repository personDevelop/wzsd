@using MVCExtention;
@{
    ViewBag.Title = "系统角色设置";
}

<!--工具栏-->
<div id="floatHead" class="toolbar-wrap">
    <div class="toolbar">
        <div class="box-wrap">
            <a class="menu-btn"></a>
            <div class="l-list">
                <ul class="icon-list">
                    <li><a class="add" href="@Url.Action("Edit")"><i></i><span>新增</span></a></li>
                    <li><a class="edit" href="javascript:;" onclick="EditGrid('jqxgrid', '@Url.Action("Edit")');"><i></i><span>修改</span></a></li>
                    <li><a class="del" href="javascript:;" onclick="DelGrid('jqxgrid', '@Url.Action("Delete")');"><i></i><span>删除</span></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--/工具栏-->
<!--列表-->
<div class="table-container">
    <div id="jqxgrid"></div>
</div>
<!--/列表-->
@section  scripts{
     

    <script type="text/javascript">
        $(document).ready(function () {
            var url = "@Url.Action("GetList")";
          
           
            var datafields = [{ name: 'ID' }, { name: 'Code' }, { name: 'Name' },

		{ name: 'Enable' }, { name: 'Note' }, { name: 'RoleClass' }];
            var columns = [
{ text: '编号', dataField: 'Code', type: 'string', width: 200 },

  { text: '名称', dataField: 'Name', cellsalign: "left", type: 'string', width: 200 },

  { text: '可用', dataField: 'Enable', type: 'string', width: 200 },

  { text: '角色分类', dataField: 'RoleClass', type: 'string', width: 200 }];
            CreateGrid("jqxgrid", url, datafields, columns );
             
        });
    </script>
   

}
