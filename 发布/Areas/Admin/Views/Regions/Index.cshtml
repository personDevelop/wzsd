@using MVCExtention;
@{
    ViewBag.Title = "行政区域";
}

<!--工具栏-->
<div id="floatHead" class="toolbar-wrap">
    <div class="toolbar">
        <div class="box-wrap">
            <a class="menu-btn"></a>
            <div class="l-list">
                <ul class="icon-list">
                    <li><a class="add" href="@Url.Action("Edit")"><i></i><span>新增</span></a></li>
                    <li><a class="add" href="javascript:;" onclick="Edit();"><i></i><span>编辑</span></a></li>
                    <li><a class="del" href="javascript:;" onclick="Del( );"><i></i><span>删除</span></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--/工具栏-->
<!--列表-->
<div class="table-container">
    <div id="treeGrid">
    </div>
</div>
<!--/列表-->
@section  scripts{

    <script type="text/javascript">
        $(document).ready(function () {

            var source =
             {
                 dataType: "json",
                 dataFields: [

		{ name: 'ID', type: 'string' },

		{ name: 'ParentID', type: 'string' },

		{ name: 'Code', type: 'string' },

		{ name: 'Name', type: 'string' },

		{ name: 'ShotName', type: 'string' },

		{ name: 'Path', type: 'string' },

		{ name: 'FullPath', type: 'string' },

		{ name: 'Jb', type: 'string' },

		{ name: 'Qh', type: 'string' },

		{ name: 'ZipCode', type: 'string' },

		{ name: 'Note', type: 'string' },


                 ],
                 timeout: 10000,
                 hierarchy:
                 {
                     keyDataField: { name: 'ID' },
                     parentDataField: { name: 'ParentID' }
                 },
                 id: 'ID',
                 root: 'Rows',
                 url: " @Url.Action("GetList", "Regions", new { area = "Admin" })"
             };
            var dataAdapter = new $.jqx.dataAdapter(source);
            var dataAdapter = new $.jqx.dataAdapter(source);
            var totalHeight = $(window).outerHeight();
            if (totalHeight == 0) {
                totalHeight = $(window).clientHeight();
            }
            var topHight = 50;

            var middleHeight = totalHeight - topHight;

            $("#treeGrid").jqxTreeGrid(
                       {
                           width: "95%",

                           virtualModeCreateRecords: function (expandedRecord, done) {
                               var dataAdapter = new $.jqx.dataAdapter(source,
                                   {
                                       formatData: function (data) {
                                           if (expandedRecord == null) {
                                               data.parentID = 0;
                                           }
                                           else {
                                               data.parentID = expandedRecord.ID;
                                           }
                                           return data;
                                       },
                                       loadComplete: function () {
                                           done(dataAdapter.records);
                                       },
                                       loadError: function (xhr, status, error) {
                                           done(false);
                                           throw new Error("http://services.odata.org: " + error.toString());
                                       }
                                   }
                               );
                               dataAdapter.dataBind();
                           },
                           virtualModeRecordCreating: function (record) {
                               // record is creating.
                           },
                           columns: [
  { text: '编号', dataField: 'Code', align: "center",   type: 'string', width: 300 },

  { text: '名称', dataField: 'Name', align: "center", cellsalign: "center", type: 'string', width: 200 },

  { text: '简称', dataField: 'ShotName', align: "center", cellsalign: "center", type: 'string', width: 100 },

  { text: '路径', dataField: 'Path', align: "center", cellsalign: "center", type: 'string'  }


                           ]
                       });
        });
    </script>
    <script type="text/javascript">
        function Edit() {
            var data = $("#treeGrid").jqxTreeGrid('getSelection');
            if (data.length == 1) {

                href = "@Url.Action("Edit", new  { area="admin" })";
                location.href = href + "/" + data[0].ID;
            } else { ErrorMsg("请选择一条数据"); }


        }

        function Del() {
            var data = $("#treeGrid").jqxTreeGrid('getSelection');
            if (data.length == 1) {

                href = "@Url.Action("Delete", new { area = "admin" })";
                $.post(href, { ID: data[0].ID }, function (d) {
                    ErrorMsg(d);
                    if (d.indexOf("成功") > -1) {
                        $("#treeGrid").jqxTreeGrid('deleteRow', data[0].ID);
                    }
                });
            } else { ErrorMsg("请选择一条数据"); }
        }
    </script>
}
