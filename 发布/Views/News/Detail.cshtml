@model EasyCms.Model.NewsInfo
@using EasyCms.Model
@{
    ViewBag.Title = Model.NewsTitle+"--" + EasyCms.CmsSessionExtend.WebSite.Name; 
}
@Styles.Render("~/bundles/productcss")
@Styles.Render("~/bundles/newscss")
    <style>
        #detail h1 {
            padding: 10px 0 15px;
            margin-bottom: 10px;
            height: 24px;
            text-align: center;
            border-bottom: 1px solid #EBEBEB;
            font-family: \5fae\8f6f\96c5\9ed1;
            line-height: 24px;
            font-size: 20px;
        }

        #detail {
            border: 1px solid #EBEBEB;
            padding: 15px 30px 0;
            font-family: \5fae\8f6f\96c5\9ed1;
            margin-left: 220px;
            color: #666;
        }

            #detail .summary {
                text-align: center;
                color: #999;
            }

            #detail .mc {
                padding: 30px 10px;
                font-size: 14px;
                line-height: 2em;
            }
    </style>
    <div class="floor" style=" margin-top: 10px;">
        @FunctionExtend.HotProduct(StationMode.热卖商品)
        
        <div id='detail'>
            <div class="title">
                <h1>@Model.NewsTitle</h1>

                <div class="summary">时间：@Model.LastEditDate.ToString("yyyy-MM-dd HH:mm")&nbsp;&nbsp;&nbsp;&nbsp;</div>
            </div>
            <div class="mc">
           @(new HtmlString(Model.PCDescription.Replace("\\\"", "\"").Replace("\\r\\n", "")))
             </div>

        </div>

    </div>

